{
  "name": "opentrace",
  "version": "0.0.2",
  "description": "System architecture exploration and incident investigation using OpenTrace's knowledge graph",
  "author": {
    "name": "OpenTrace Team"
  },
  "license": "MIT",
  "homepage": "https://opentrace.ai",
  "repository": "https://github.com/opentrace/claude-code",
  "keywords": [
    "architecture",
    "observability",
    "incident-response",
    "knowledge-graph",
    "mcp"
  ],
  "mcpServers": ["./mcp-servers/opentrace.json"],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/user-prompt-submit/script.sh"
          }
        ]
      }
    ]
  }
}
