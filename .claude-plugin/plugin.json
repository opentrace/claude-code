{
  "name": "opentrace",
  "version": "0.0.4",
  "description": "System architecture exploration and incident investigation using OpenTrace's knowledge graph",
  "author": {
    "name": "OpenTrace Team"
  },
  "license": "MIT",
  "homepage": "https://opentrace.ai",
  "repository": "https://github.com/opentrace/claude-code",
  "keywords": [
    "architecture",
    "observability",
    "incident-response",
    "knowledge-graph",
    "mcp"
  ],
  "mcpServers": ["./mcp-servers/opentrace.json"],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start/script.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__.*(?i)opentrace.*(traverse_dependencies|traverse_incoming|traverse_outgoing|get_neighbors)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-use-traversal/script.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-use-edit-blast-radius/prompt.txt"
          }
        ]
      }
    ]
  }
}
